@*To access the properties of studnet in html*@
@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Add Student</h1>
@*This form will submit button*@
<form method="post">

@*using Bootstrap*@

<div class="mt-3">
    <lable class="form-lable">Name</lable>
    <input type="text" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <lable class="form-lable">Email</lable>
    <input type="email" class="form-control" asp-for="Email"/>
</div>

<div class="mt-3">
    <lable class="form-lable">Phone</lable>
    <input type="text" class="form-control" asp-for="Phone"/>
</div>

<div class="mt-3">
    <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed"/>
    <lable class="form-check-label" for="Subscribed">Subscribed</lable>
</div>


<div class="mt-3">
<button type="submit" class="btn btn-primary">Save</button>
</div>
</form>